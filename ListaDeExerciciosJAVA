
package newpackage;

public class ClasseQuadrado {
private double lado;
    
public void alterarValorDoLado(double lado){ 
    this.lado=lado; 
}
public double retornarValorLado(){
    return lado;
}
public void calcularArea(){
   double area=lado*lado; 
   System.out.println("A Area Ã©: "+area);
}
    
}

